<div class="container">
    <div class="col-md-12">
        <div class="text-center">
            <h1>Saved Articles</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="panel-body">
                        <p> {{this.summary}}</p>
                        <a href={{this.link}} target="_blank">{{this.link}}</a>
                        <br><br>
                        <button type="button" class="btn btn-primary addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                        <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="panel panel-primary">
            <div class="panel-body">
                <h3><i>You have no saved articles.</i></h3>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--clicked notes modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}